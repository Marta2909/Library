<%= simple_form_for [:admin,@book] do |f| %>
  <%= f.input :author %>
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :year, label: "Year of edition" %>
  <%= f.input :count, label: "Copies count" %>
  <%= f.input :publisher %>
  <%= f.button :submit, button_name, class: "btn btn-success" %>
<% end %>
