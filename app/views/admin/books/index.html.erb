<p><%= link_to "Dodaj książkę", new_admin_book_path, class: "btn btn-primary" %></p>

<table class="table">
  <thead>
    <th>Autor</th>
    <th>Tytuł</th>
    <th>Dostępna ilość</th>
    <th>Wypożyczonych</th>
    <th>Do wypożyczenia</th>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.author %></td>
        <td><%= book.title %></td>
        <td><%= book.count %></td>
        <td><%= book.borrowed_count %></td>
        <td><%= book.count - book.borrowed_count %></td>
        <td><%= link_to "Zobacz szczegóły", admin_book_path(book) %></td>
        <td><%= link_to "Edytuj", edit_admin_book_path(book) %></td>
        <% if book.borrowed_count == 0 %>
          <td><%= link_to "Usuń", admin_book_path(book), method: :delete, data: {confirm: "Czy na pewno chchcesz usunąć książkę #{book.title}?"} %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
