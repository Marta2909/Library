<h4><%= link_to "Add book", new_admin_book_path, class: "btn btn-primary" %><%= link_to "See users statistics", admin_user_statistics_path, class: "btn btn-success" %></h4>

<table class="table">
  <thead>
    <th>Author</th>
    <th>Title</th>
    <th>Copies count</th>
    <th>Borrowed</th>
    <th>To borrow</th>
    <th colspan="3">Options</th>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.author %></td>
        <td><%= book.title %></td>
        <td><%= book.count %></td>
        <td><%= book.borrowed_count %></td>
        <td><%= book.count - book.borrowed_count %></td>
        <td><%= link_to "See details", admin_book_path(book) %></td>
        <td><%= link_to "Edit", edit_admin_book_path(book) %></td>
        <% if book.borrowed_count == 0 %>
          <td><%= link_to "Remove", admin_book_path(book), method: :delete, data: {confirm: "Are you sure to remove #{book.title}?"} %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
